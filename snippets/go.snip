source go.vim

snippet     helloworld
abbr        package main\nimport fmt...
options     head
  package main

  import (
    "fmt"
  )

  func main() {
    fmt.Printf("Hello, world\n")
  }

snippet     func
abbr        func ...() { ... }
alias fn
options     head
  func ${1:fname}(${2}) ${3:int }{
    ${0:TARGET:return }
  }

snippet     import
alias im
options     head
  import (
    "${1:fmt}"
  )
  ${0:TARGET}

snippet     package
alias pk
options     head
  package ${1:main}
  ${0:TARGET}

snippet     printf
alias pf
options     head
  fmt.Printf("${1}\n"${2:})

